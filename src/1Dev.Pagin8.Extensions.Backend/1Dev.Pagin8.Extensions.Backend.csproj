<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>

    <!-- NuGet Package Metadata -->
    <PackageId>1Dev.Pagin8.Extensions.Backend</PackageId>
    <Version>1.0.0</Version>
    <Authors>1DEV</Authors>
    <Company>1DEV</Company>
    <Description>Backend extensions for Pagin8 - includes FilterProvider, repository base classes, and ASP.NET Core integration for PostgreSQL and SQL Server.</Description>
    <PackageTags>pagin8;postgresql;sqlserver;filtering;pagination;aspnetcore;dapper;repository</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/1dev-rs/pagin8</RepositoryUrl>
    <PackageProjectUrl>https://github.com/1dev-rs/pagin8</PackageProjectUrl>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <!-- Pagin8 Core -->
    <ProjectReference Include="..\1Dev.Pagin8\1Dev.Pagin8.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- Required Dependencies -->
    <PackageReference Include="Dapper" Version="2.1.66" />
    <PackageReference Include="Npgsql" Version="9.0.4" />
    <PackageReference Include="Microsoft.Data.SqlClient" Version="5.2.2" />
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.2.0" />
    <!-- Pin to net9-compatible version; without this an SDK with .NET 10 resolves 10.0.0.0 which breaks net9 deployments -->
    <PackageReference Include="System.Text.Json" Version="9.0.4" />
  </ItemGroup>

</Project>
